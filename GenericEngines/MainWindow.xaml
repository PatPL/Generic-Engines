							</Grid>
						</DataTemplate>
					</DataGridTemplateColumn.CellEditingTemplate>
					<DataGridTemplateColumn.HeaderTemplate>
						<DataTemplate>
							<TextBlock Text="Dimensions" ToolTip="Dimensions" FontFamily="Verdana"></TextBlock>
						</DataTemplate>
					</DataGridTemplateColumn.HeaderTemplate>
				</DataGridTemplateColumn>

				<DataGridTemplateColumn SortMemberPath="Gimbal">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Path=GimbalStatus, StringFormat={}{0}}" FontFamily="Verdana" VerticalAlignment="Center" Margin="1,1,1,1"></TextBlock>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
					<DataGridTemplateColumn.CellEditingTemplate>
						<DataTemplate>
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="18"/>
									<RowDefinition Height="1*"/>
									<RowDefinition Height="1*"/>
								</Grid.RowDefinitions>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="auto"/>
									<ColumnDefinition Width="1*"/>
									<ColumnDefinition Width="1*"/>
								</Grid.ColumnDefinitions>

								<TextBlock Text="Advanced gimbal" VerticalAlignment="Center" Margin="2,0" FontFamily="Verdana"/>
								<CheckBox x:Name="GimbalCheckbox" IsChecked="{Binding Path=AdvancedGimbal, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="16" Height="16" Margin="1,1,1,0"/>

								<TextBlock Visibility="{Binding IsChecked, ElementName=GimbalCheckbox, Converter={StaticResource rb2v}}" Text="Gimbal range" Grid.Row="1" VerticalAlignment="Center" FontFamily="Verdana" Margin="2,0"/>
								<TextBox Visibility="{Binding IsChecked, ElementName=GimbalCheckbox, Converter={StaticResource rb2v}}" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1" Text="{Binding Path=Gimbal, UpdateSourceTrigger=LostFocus}" FontFamily="Verdana" MinWidth="60" Padding="2,0"/>

