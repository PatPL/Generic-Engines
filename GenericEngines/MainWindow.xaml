<Window x:Class="GenericEngines.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenericEngines"
        mc:Ignorable="d"
        Title="Generic Engines" Height="600" Width="800" KeyUp="Window_KeyUp" Closing="MainWindow_Closing" UseLayoutRounding="True" Icon="icon.ico" FontFamily="Verdana">
	<Window.Resources>
		<BooleanToVisibilityConverter x:Key="b2v" />
		<local:ReversedBooleanToVisibilityConverter x:Key="rb2v" />
		<local:MultiModeSlaveVisibilityConverter x:Key="mms2v" />
		<local:MultiConfigSlaveVisibilityConverter x:Key="mcs2v" />
		<Style TargetType="CheckBox">
			<Setter Property="HorizontalAlignment" Value="Center"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="Margin" Value="1, 1, 1, 1"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="CheckBox">
						<Border BorderBrush="#FF444444" BorderThickness="1">
							<Rectangle x:Name="CheckboxRectangle" Width="14" Height="14" Fill="#FF4444FF"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsChecked" Value="False">
								<Setter TargetName="CheckboxRectangle" Property="Fill" Value="#FF444444"/>
							</Trigger>
							<Trigger Property="IsChecked" Value="True">
								<Setter TargetName="CheckboxRectangle" Property="Fill" Value="#FF44BB44"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<Style TargetType="CheckBox" x:Key="CheckBoxSwitch">
			<Setter Property="HorizontalAlignment" Value="Center"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="Margin" Value="1, 1, 1, 1"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="CheckBox">
						<Border BorderBrush="#FF444444" BorderThickness="1">
							<Rectangle x:Name="CheckboxRectangle" Width="30" Height="14" Fill="#FF4444FF"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsChecked" Value="False">
								<Setter TargetName="CheckboxRectangle" Property="Fill">
									<Setter.Value>
										<LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
											<LinearGradientBrush.RelativeTransform>
												<TransformGroup>
													<ScaleTransform CenterY="0.5" CenterX="0.5"/>
													<SkewTransform CenterY="0.5" CenterX="0.5"/>
													<RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
													<TranslateTransform/>
												</TransformGroup>
											</LinearGradientBrush.RelativeTransform>
											<GradientStop Color="#FF444444" Offset="0"/>
											<GradientStop Color="#FF444444" Offset="0.5"/>
											<GradientStop Color="#FF44BB44" Offset="0.5"/>
											<GradientStop Color="#FF44BB44" Offset="1"/>
										</LinearGradientBrush>
									</Setter.Value>
								</Setter>
							</Trigger>
							<Trigger Property="IsChecked" Value="True">
								<Setter TargetName="CheckboxRectangle" Property="Fill">
									<Setter.Value>
										<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
											<LinearGradientBrush.RelativeTransform>
												<TransformGroup>
													<ScaleTransform CenterY="0.5" CenterX="0.5"/>
													<SkewTransform CenterY="0.5" CenterX="0.5"/>
													<RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
													<TranslateTransform/>
												</TransformGroup>
											</LinearGradientBrush.RelativeTransform>
											<GradientStop Color="#FF44BB44" Offset="0"/>
											<GradientStop Color="#FF44BB44" Offset="0.5"/>
											<GradientStop Color="#FF444444" Offset="0.5"/>
											<GradientStop Color="#FF444444" Offset="1"/>
										</LinearGradientBrush>
									</Setter.Value>
								</Setter>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<Style TargetType="DataGrid">
			<Setter Property="FontFamily" Value="Verdana"/>
			<Setter Property="RowHeaderWidth" Value="0"/>
		</Style>
		<Style TargetType="DataGridColumnHeader">
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Background" Value="#FF999999"/>
			<Setter Property="BorderBrush" Value="#FF444444"/>
			<Setter Property="BorderThickness" Value="0, 0, 1, 1"/>
			<Setter Property="SnapsToDevicePixels" Value="True"/>
			<Setter Property="Padding" Value="4, 0, 4, 0"/>
			<Style.Triggers>
				<Trigger Property="SortDirection" Value="Ascending">
					<Setter Property="Background" Value="#FFFF9999"/>
				</Trigger>
				<Trigger Property="SortDirection" Value="Descending">
					<Setter Property="Background" Value="#FF9999FF"/>
				</Trigger>
			</Style.Triggers>
		</Style>
		<Style TargetType="Image">
			<Setter Property="ToolTipService.InitialShowDelay" Value="333"/>
			<Setter Property="ToolTipService.BetweenShowDelay" Value="333"/>
			<Setter Property="ToolTipService.ShowDuration" Value="3600000"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="ForceCursor" Value="True"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Opacity" Value="0.6"/>
				</Trigger>
			</Style.Triggers>
		</Style>
		<Style TargetType="ListBoxItem">
			<Setter Property="ToolTipService.InitialShowDelay" Value="500"/>
			<Setter Property="ToolTipService.BetweenShowDelay" Value="0"/>
			<Setter Property="ToolTipService.ShowDuration" Value="3600000"/>
		</Style>
		<Style TargetType="ComboBox">
			<Setter Property="ToolTipService.InitialShowDelay" Value="500"/>
			<Setter Property="ToolTipService.ShowDuration" Value="3600000"/>
		</Style>
		<Style TargetType="ToolTip">
			<Setter Property="FontFamily" Value="Verdana"/>
			<Setter Property="Background" Value="#bbbbbb"/>
			<Setter Property="Foreground" Value="#444444"/>
			<Setter Property="HasDropShadow" Value="false"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="BorderBrush" Value="#444444"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="ToolTip">
						<Border CornerRadius="0" SnapsToDevicePixels="True" BorderThickness="2, 2, 1, 1" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" BorderBrush="#444444" Background="#bbbbbb">
							<ContentPresenter Margin="2, 2, 4, 4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>
	<Window.InputBindings>
		<KeyBinding Modifiers="Ctrl" Key="N" Command="{Binding New_Command}"/>
		<KeyBinding Modifiers="Ctrl" Key="O" Command="{Binding Open_Command}"/>
		<KeyBinding Modifiers="Ctrl" Key="I" Command="{Binding Append_Command}"/>
		<KeyBinding Modifiers="Ctrl" Key="S" Command="{Binding Save_Command}"/>
		<KeyBinding Modifiers="Ctrl+Shift" Key="S" Command="{Binding SaveAs_Command}"/>
		<KeyBinding Modifiers="Ctrl" Key="V" Command="{Binding Validate_Command}"/>
		<KeyBinding Modifiers="Ctrl" Key="E" Command="{Binding Export_Command}"/>
		<KeyBinding Modifiers="Ctrl" Key="D" Command="{Binding Duplicate_Command}"/>
		<KeyBinding Modifiers="Ctrl" Key="Add" Command="{Binding Add_Command}"/>
		<KeyBinding Modifiers="Ctrl" Key="OemPlus" Command="{Binding Add_Command}"/>
		<KeyBinding Modifiers="Ctrl" Key="Subtract" Command="{Binding Remove_Command}"/>
		<KeyBinding Modifiers="Ctrl" Key="OemMinus" Command="{Binding Remove_Command}"/>
	</Window.InputBindings>
	<Grid Margin="0,0,0,0" Background="#FFDDDDDD">
		
		<Grid.RowDefinitions>
			<RowDefinition MaxHeight="36" Height="auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Menu Visibility="{Binding UseCompactMenu, Converter={StaticResource b2v}}" Height="20" Margin="0,0,0,-4" Background="#FFDDDDDD" FontFamily="Verdana">
            <MenuItem Header="File">
				<MenuItem Header="New (Ctrl + N)" Command="{Binding New_Command}">
					<MenuItem.Icon>
						<Image Width="16" Height="16" SnapsToDevicePixels="True" Source="Images/MenuIcons16/new16.png"/>
					</MenuItem.Icon>
				</MenuItem>
				<MenuItem Header="Open (Ctrl + O)" Command="{Binding Open_Command}">
					<MenuItem.Icon>
						<Image Width="16" Height="16" SnapsToDevicePixels="True" Source="Images/MenuIcons16/open16.png"/>
					</MenuItem.Icon>
				</MenuItem>
				<MenuItem Header="Append (Ctrl + I)" Command="{Binding Append_Command}">
					<MenuItem.Icon>
						<Image Width="16" Height="16" SnapsToDevicePixels="True" Source="Images/MenuIcons16/append16.png"/>
					</MenuItem.Icon>
				</MenuItem>
				<Separator/>
				<MenuItem Header="Save (Ctrl + S)" Command="{Binding Save_Command}">
					<MenuItem.Icon>
						<Image Width="16" Height="16" SnapsToDevicePixels="True" Source="Images/MenuIcons16/save16.png"/>
					</MenuItem.Icon>
				</MenuItem>
				<MenuItem Header="Save as (Ctrl + Shift + S)" Command="{Binding SaveAs_Command}">
					<MenuItem.Icon>
						<Image Width="16" Height="16" SnapsToDevicePixels="True" Source="Images/MenuIcons16/saveas16.png"/>
					</MenuItem.Icon>
				</MenuItem>
				<MenuItem Header="Validate (Ctrl + V)" Command="{Binding Validate_Command}">
					<MenuItem.Icon>
						<Image Width="16" Height="16" SnapsToDevicePixels="True" Source="Images/MenuIcons16/validate16.png"/>
					</MenuItem.Icon>
				</MenuItem>
				<MenuItem Header="Export (Ctrl + E)" Command="{Binding Export_Command}">
					<MenuItem.Icon>
						<Image Width="16" Height="16" SnapsToDevicePixels="True" Source="Images/MenuIcons16/export16.png"/>
					</MenuItem.Icon>
				</MenuItem>
            </MenuItem>
            <MenuItem Header="Engine">
				<MenuItem Header="Add (Ctrl + [+])" Command="{Binding Add_Command}">
					<MenuItem.Icon>
						<Image Width="16" Height="16" SnapsToDevicePixels="True" Source="Images/MenuIcons16/add16.png"/>
					</MenuItem.Icon>
				</MenuItem>
				<MenuItem Header="Remove (Ctrl + [-])" Command="{Binding Remove_Command}">
					<MenuItem.Icon>
						<Image Width="16" Height="16" SnapsToDevicePixels="True" Source="Images/MenuIcons16/remove16.png"/>
					</MenuItem.Icon>
				</MenuItem>
				<MenuItem Header="Duplicate (Ctrl + D)" Command="{Binding Duplicate_Command}">
					<MenuItem.Icon>
						<Image Width="16" Height="16" SnapsToDevicePixels="True" Source="Images/MenuIcons16/duplicate16.png"/>
					</MenuItem.Icon>
				</MenuItem>
			</MenuItem>
            <MenuItem Header="Settings" Command="{Binding Settings_Command}"/>
            <MenuItem Header="About" Command="{Binding About_Command}"/>
        </Menu>

		<Grid Height="36"  Visibility="{Binding UseCompactMenu, Converter={StaticResource rb2v}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="36"/>
                <ColumnDefinition Width="36"/>
                <ColumnDefinition Width="36"/>
                <ColumnDefinition Width="36"/>
                <ColumnDefinition Width="36"/>
                <ColumnDefinition Width="36"/>
                <ColumnDefinition Width="36"/>
                <ColumnDefinition Width="36"/>
                <ColumnDefinition Width="36"/>
                <ColumnDefinition Width="36"/>
                <ColumnDefinition Width="*" MinWidth="4"/>
                <ColumnDefinition Width="36"/>
                <ColumnDefinition Width="36"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Margin="4,4,0,0" Source="Images/new.png" MouseDown="RegisterMouseDown" MouseUp="NewButton_MouseUp" ToolTip="(Ctrl + N) Open a new empty file" Stretch="Fill"/>
            <Image Grid.Column="1" Margin="4,4,0,0" Source="Images/open.png" MouseDown="RegisterMouseDown" MouseUp="OpenButton_MouseUp" ToolTip="(Ctrl + O) Open engine configs from file" Stretch="Fill"/>
            <Image Grid.Column="2" Margin="4,4,0,0" Source="Images/append.png" MouseDown="RegisterMouseDown" MouseUp="AppendButton_MouseUp" ToolTip="(Ctrl + I) Append engines from file to current list" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Image Grid.Column="3" Margin="4,4,0,0" Source="Images/save.png" MouseDown="RegisterMouseDown" MouseUp="SaveButton_MouseUp" ToolTip="(Ctrl + S) Save current engine configs" Stretch="Fill"/>
            <Image Grid.Column="4" Margin="4,4,0,0" Source="Images/saveas.png" MouseDown="RegisterMouseDown" MouseUp="SaveasButton_MouseUp" ToolTip="(Ctrl + Shift + S) Save current engine configs as new file" Stretch="Fill"/>
            <Image Grid.Column="5" Margin="4,4,0,0" Source="Images/validate.png" MouseDown="RegisterMouseDown" MouseUp="ValidateButton_MouseUp" ToolTip="(Ctrl + V) Validate current engine list" Stretch="Fill"/>
            <Image Grid.Column="6" Margin="4,4,0,0" Source="Images/export.png" MouseDown="RegisterMouseDown" MouseUp="ExportButton_MouseUp" ToolTip="(Ctrl + E) Export engine configs as KSP mod" Stretch="Fill"/>
            <Image Grid.Column="7" Margin="4,4,0,0" Source="Images/duplicate.png" MouseDown="RegisterMouseDown" MouseUp="DuplicateButton_MouseUp" ToolTip="(Ctrl + D) Duplicate selected engines" Stretch="Fill"/>
            <Image Grid.Column="8" Margin="4,4,0,0" Source="Images/add.png" MouseDown="RegisterMouseDown" MouseUp="AddButton_MouseUp" ToolTip="(Ctrl + [+]) Add new engine config" Stretch="Fill"/>
            <Image Grid.Column="9" Margin="4,4,0,0" Source="Images/remove.png" MouseDown="RegisterMouseDown" MouseUp="RemoveButton_MouseUp" ToolTip="(Ctrl + [-]) Remove all selected engine configs" Stretch="Fill"/>
            <Image Grid.Column="11" Margin="0,4,4,0" Source="Images/help.png" MouseDown="RegisterMouseDown" MouseUp="HelpButton_MouseUp" ToolTip="Help &amp; About" Stretch="Fill"/>
            <Image Grid.Column="12" Margin="0,4,4,0" Source="Images/settings.png" MouseDown="RegisterMouseDown" MouseUp="SettingsButton_MouseUp" ToolTip="Open settings window" Stretch="Fill"/>
        </Grid>
        <DataGrid PreviewKeyDown="MainDataGrid_PreviewKeyDown" HeadersVisibility="Column" HorizontalContentAlignment="Stretch" AutoGenerateColumns="false" BeginningEdit="MainDataGrid_BeginningEdit" CellEditEnding="MainDataGrid_CellEditEnding" PreviewKeyUp="MainDataGrid_KeyUp" CanUserAddRows="False" CanUserDeleteRows="False" Loaded="MainDataGrid_Loaded" Margin="0,4,0,0" Grid.Row="1" Grid.ColumnSpan="999" Background="#FFBBBBBB" AlternatingRowBackground="#FFAAAAAA" AlternationCount="2" RowBackground="#FFCCCCCC" HorizontalGridLinesBrush="#FF444444" VerticalGridLinesBrush="#FF444444" CanUserSortColumns="True">
			<DataGrid.Columns>
				<DataGridTemplateColumn SortMemberPath="Active" Width="1">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<CheckBox IsChecked="{Binding Path=Active, UpdateSourceTrigger=PropertyChanged}"/>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
					<DataGridTemplateColumn.HeaderTemplate>
						<DataTemplate>
							<TextBlock Text="Active" ToolTip="Active" FontFamily="Verdana"></TextBlock>
						</DataTemplate>
					</DataGridTemplateColumn.HeaderTemplate>
				</DataGridTemplateColumn>

				<DataGridTemplateColumn SortMemberPath="EngineIDInterface">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Path=EngineIDInterface}" FontFamily="Verdana" VerticalAlignment="Center" Margin="1,1,1,1"></TextBlock>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
					<DataGridTemplateColumn.CellEditingTemplate>
						<DataTemplate>
							<TextBox Text="{Binding Path=EngineIDInterface, UpdateSourceTrigger=LostFocus}" FontFamily="Verdana"></TextBox>
						</DataTemplate>
					</DataGridTemplateColumn.CellEditingTemplate>
					<DataGridTemplateColumn.HeaderTemplate>
						<DataTemplate>
							<TextBlock Text="ID" ToolTip="ID" FontFamily="Verdana"></TextBlock>
						</DataTemplate>
					</DataGridTemplateColumn.HeaderTemplate>
				</DataGridTemplateColumn>

				<DataGridTemplateColumn SortMemberPath="RealEngineName" MaxWidth="250">
					<DataGridTemplateColumn.CellStyle>
						<Style TargetType="DataGridCell">
							<Style.Triggers>
								<DataTrigger Binding="{Binding PolyType}" Value="MultiModeSlave">
									<Setter Property="Background" Value="#FF444444"/>
									<Setter Property="Foreground" Value="#FF444444"/>
									<Setter Property="IsEnabled" Value="False"/>
								</DataTrigger>
							</Style.Triggers>
						</Style>
					</DataGridTemplateColumn.CellStyle>
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Path=NameLabel, StringFormat={}{0}}" FontFamily="Verdana" VerticalAlignment="Center" Margin="1,1,1,1"></TextBlock>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
					<DataGridTemplateColumn.CellEditingTemplate>
						<DataTemplate>
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="16"/>
									<RowDefinition Height="20"/>
									<RowDefinition Height="16"/>
									<RowDefinition Height="20"/>
									<RowDefinition Height="16"/>
									<RowDefinition Height="*"/>
								</Grid.RowDefinitions>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Grid.Row="0" Text="Title" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2,2,0,0"/>
								<TextBox Grid.Row="1" Text="{Binding Path=EngineName, UpdateSourceTrigger=LostFocus}" FontFamily="Verdana">
									<TextBox.Style>
										<Style TargetType="TextBox">
											<Style.Triggers>
												<DataTrigger Binding="{Binding PolyType}" Value="MultiConfigSlave">
													<Setter Property="IsEnabled" Value="False"/>
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</TextBox.Style>
								</TextBox>
								<TextBlock Grid.Row="2" Text="Manufacturer" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2,2,0,0"/>
								<TextBox Grid.Row="3" Text="{Binding Path=EngineManufacturer, UpdateSourceTrigger=LostFocus}" FontFamily="Verdana">
									<TextBox.Style>
										<Style TargetType="TextBox">
											<Style.Triggers>
												<DataTrigger Binding="{Binding PolyType}" Value="MultiConfigSlave">
													<Setter Property="IsEnabled" Value="False"/>
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</TextBox.Style>
								</TextBox>
								<TextBlock Grid.Row="4" Text="Description" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2,2,0,0"/>
								<TextBox TextWrapping="Wrap" Grid.Row="5" Text="{Binding Path=EngineDescription, UpdateSourceTrigger=LostFocus}" FontFamily="Verdana" VerticalAlignment="Top" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto" Width="250"></TextBox>
							</Grid>
						</DataTemplate>
					</DataGridTemplateColumn.CellEditingTemplate>
					<DataGridTemplateColumn.HeaderTemplate>
						<DataTemplate>
							<TextBlock Text="Name" ToolTip="Name" FontFamily="Verdana"></TextBlock>
						</DataTemplate>
					</DataGridTemplateColumn.HeaderTemplate>
				</DataGridTemplateColumn>

				<DataGridTemplateColumn Header="Polymorphism">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Path=PolyLabel, StringFormat={}{0}}" FontFamily="Verdana" VerticalAlignment="Center" Margin="1,1,1,1"></TextBlock>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
					<DataGridTemplateColumn.CellEditingTemplate>
						<DataTemplate>
							<!-- Paste grid -->
							<Grid Margin="0,0,0,0" Background="#FFDDDDDD" VerticalAlignment="Top" HorizontalAlignment="Stretch">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
								</Grid.ColumnDefinitions>
								<Grid.RowDefinitions>
									<RowDefinition Height="20"/>
									<RowDefinition Height="auto" MaxHeight="20"/>
								</Grid.RowDefinitions>

								<ComboBox ItemsSource="{Binding PolyTypesWithLabels}" DisplayMemberPath="Value" SelectedValuePath="Key" SelectedValue="{Binding PolyType, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Stretch" Margin="0"/>

								<ComboBox Grid.Row="1" Loaded="MasterIDComboBox_Loaded" DisplayMemberPath="Name" DropDownOpened="MasterIDComboBox_OpenDropbox" SelectedValue="{Binding SetMasterEngine, UpdateSourceTrigger=PropertyChanged}"/>

							</Grid>
							<!-- /Paste -->
						</DataTemplate>
					</DataGridTemplateColumn.CellEditingTemplate>
					<DataGridTemplateColumn.HeaderTemplate>
						<DataTemplate>
							<TextBlock Text="Polymorphism" ToolTip="Polymorphism" FontFamily="Verdana"></TextBlock>
						</DataTemplate>
					</DataGridTemplateColumn.HeaderTemplate>
				</DataGridTemplateColumn>

				<DataGridTemplateColumn SortMemberPath="EngineVariant">
					<DataGridTemplateColumn.CellStyle>
						<Style TargetType="DataGridCell">
							<Style.Triggers>
								<DataTrigger Binding="{Binding PolyType}" Value="MultiModeSlave">
									<Setter Property="Background" Value="#FF444444"/>
									<Setter Property="Foreground" Value="#FF444444"/>
									<Setter Property="IsEnabled" Value="False"/>
								</DataTrigger>
								<DataTrigger Binding="{Binding PolyType}" Value="MultiConfigSlave">
									<Setter Property="Background" Value="#FF444444"/>
									<Setter Property="Foreground" Value="#FF444444"/>
									<Setter Property="IsEnabled" Value="False"/>
								</DataTrigger>
							</Style.Triggers>
						</Style>
					</DataGridTemplateColumn.CellStyle>
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Path=EngineVariant, StringFormat={}{0}}" FontFamily="Verdana" VerticalAlignment="Center" Margin="1,1,1,1"></TextBlock>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
					<DataGridTemplateColumn.CellEditingTemplate>
						<DataTemplate>
							<ComboBox Loaded="EngineTypeCombo_Loaded" SelectedValue="{Binding Path=EngineVariant, UpdateSourceTrigger=PropertyChanged}" FontFamily="Verdana"></ComboBox>
						</DataTemplate>
					</DataGridTemplateColumn.CellEditingTemplate>
					<DataGridTemplateColumn.HeaderTemplate>
						<DataTemplate>
							<TextBlock Text="Type" ToolTip="Type" FontFamily="Verdana"></TextBlock>
						</DataTemplate>
					</DataGridTemplateColumn.HeaderTemplate>
				</DataGridTemplateColumn>

				<DataGridTemplateColumn SortMemberPath="Mass">
					<DataGridTemplateColumn.CellStyle>
						<Style TargetType="DataGridCell">
							<Style.Triggers>
								<DataTrigger Binding="{Binding PolyType}" Value="MultiModeSlave">
									<Setter Property="Background" Value="#FF444444"/>
									<Setter Property="Foreground" Value="#FF444444"/>
									<Setter Property="IsEnabled" Value="False"/>
								</DataTrigger>
							</Style.Triggers>
						</Style>
					</DataGridTemplateColumn.CellStyle>
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Path=MassLabel, StringFormat={}{0}}" FontFamily="Verdana" VerticalAlignment="Center" Margin="1,1,1,1"></TextBlock>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
					<DataGridTemplateColumn.CellEditingTemplate>
						<DataTemplate>
							<TextBox Text="{Binding Path=Mass, UpdateSourceTrigger=LostFocus}" FontFamily="Verdana"></TextBox>
						</DataTemplate>
					</DataGridTemplateColumn.CellEditingTemplate>
					<DataGridTemplateColumn.HeaderTemplate>
						<DataTemplate>
							<TextBlock Text="Mass" ToolTip="Mass" FontFamily="Verdana"></TextBlock>
						</DataTemplate>
					</DataGridTemplateColumn.HeaderTemplate>
				</DataGridTemplateColumn>

				<DataGridTemplateColumn SortMemberPath="Thrust">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
                            <TextBlock Text="{Binding Path=ThrustLabel, StringFormat={}{0}}" FontFamily="Verdana" VerticalAlignment="Center" Margin="1,1,1,1"></TextBlock>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
					<DataGridTemplateColumn.CellEditingTemplate>
						<DataTemplate>
							<TextBox Text="{Binding Path=Thrust, UpdateSourceTrigger=LostFocus}" FontFamily="Verdana"></TextBox>
						</DataTemplate>
					</DataGridTemplateColumn.CellEditingTemplate>
					<DataGridTemplateColumn.HeaderTemplate>
						<DataTemplate>
							<TextBlock Text="Vacuum Thrust" ToolTip="Vacuum Thrust" FontFamily="Verdana"></TextBlock>
						</DataTemplate>
					</DataGridTemplateColumn.HeaderTemplate>
				</DataGridTemplateColumn>

				<DataGridTemplateColumn SortMemberPath="MinThrust">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
                            <TextBlock Text="{Binding Path=MinimumThrustLabel, StringFormat={}{0}}" FontFamily="Verdana" VerticalAlignment="Center" Margin="1,1,1,1"></TextBlock>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
					<DataGridTemplateColumn.CellEditingTemplate>
						<DataTemplate>
							<TextBox Text="{Binding Path=MinThrust, UpdateSourceTrigger=LostFocus}" FontFamily="Verdana"></TextBox>
						</DataTemplate>
					</DataGridTemplateColumn.CellEditingTemplate>
					<DataGridTemplateColumn.HeaderTemplate>
