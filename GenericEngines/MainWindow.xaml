								<TextBlock Text="Height" Grid.Row="1" VerticalAlignment="Center" FontFamily="Verdana" Margin="2,0"/>
								<TextBox Text="{Binding Path=Width, UpdateSourceTrigger=LostFocus}" FontFamily="Verdana" Grid.Column="1" Grid.Row="0" Width="Auto"></TextBox>
